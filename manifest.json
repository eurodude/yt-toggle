{
    "manifest_version": 3,
    "name": "YT-Toggle",
    "version": "0.5",
    "description": "Rewrite YouTube to Subscriptions and toggle Comments etc.",
    "permissions": ["tabs", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
        }
    ],
    "action": {
        "default_title": "YT-Toggle",
        "default_icon": { 
            "16": "icons/YT-Toggle-off-16.png", 
            "48": "icons/YT-Toggle-off-48.png", 
            "128": "icons/YT-Toggle-off-128.png" 
        }  
    }, 
    "icons": { 
        "16": "icons/YT-Toggle-off-16.png", 
        "48": "icons/YT-Toggle-off-48.png", 
        "128": "icons/YT-Toggle-off-128.png" 
    }
}
